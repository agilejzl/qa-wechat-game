<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo">微信登录</button>
    <block wx:else>
      <image bindtap="myAvatarTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}} 10积分</text>
    </block>
  </view>

  <view class="userinfo-actions">
    <text bindtap="goQaAddTap" class="go-qa-add-btn">{{goQaAdd}}</text>
    <text bindtap="goQaListTap" class="user-motto">{{goQaGuess}}</text>
    <text bindtap="goUserRankTap" class="user-ranking">{{goUserRanking}}</text>
  </view>
</view>
